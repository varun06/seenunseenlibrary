{
  "name": "seenunseen-bookshelf",
  "version": "1.0.0",
  "description": "Bookshelf UI for SeenUnseen podcast books",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "create-dirs": "node scripts/create_directories.js",
    "process-data": "node scripts/create_directories.js && node scripts/process_books_data.js",
    "fetch-covers": "node scripts/create_directories.js && node scripts/fetch_covers.js",
    "extract-colors": "node scripts/extract_colors.js",
    "fix-titles": "node scripts/fix_titles_from_urls.js",
    "setup-data": "npm run create-dirs && npm run process-data && npm run fetch-covers && npm run extract-colors",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "framer-motion": "^10.16.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "csv-parser": "^3.2.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "canvas": "^2.11.0"
  }
}
